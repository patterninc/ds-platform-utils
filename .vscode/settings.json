{
    "files.associations": {
        "CODEOWNERS": "ignore"
    },
    "editor.rulers": [
        {
            "column": 99,
            "color": "gray"
        },
        {
            "column": 119,
            "color": "purple"
        }
    ],
    "editor.formatOnSave": true,
    // disabled format toml's on save because pyproject.toml generated by projen is not read-only
    // so it the formatted version was regularly conflicting with the projen-generated version
    "[toml]": {
        "editor.formatOnSave": false
    },
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // "mypy-type-checker.args": [
    //     "--config-file=${workspaceFolder}/pyproject.toml"
    // ],
    "ruff.configuration": "${workspaceFolder}/pyproject.toml",
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.indexing": true,
    "python.languageServer": "Pylance",
    "python.analysis.completeFunctionParens": true,
    // "[sql]": {
    //     "editor.codeActionsOnSave": {
    //         "source.fixAll": "explicit"
    //     },
    //     "editor.formatOnSave": true,
    //     "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
    // },
    // "sqlfluff.linter.run": "onSave",
    // "sqlfluff.config": "${workspaceFolder}/pyproject.toml"
}